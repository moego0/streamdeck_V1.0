    <lv_obj width="100%" height="100%">
      <style name="st_root"/>
      <cmp_status_bar profile_num="1" right_text="RGB"/>
      <lv_obj width="100%" height="280" align="top_mid" y="32" flex_flow="column" style_pad_row="10" style_bg_opa="0">
        <lv_label text="Brightness"><style name="st_text"/></lv_label>
        <lv_slider width="100%" height="16" value="60"/>
