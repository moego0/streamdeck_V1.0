        <lv_slider width="100%" height="16" value="90"/>
        <lv_button width="100%" height="44">
          <style name="st_panel"/>
          <lv_label text="Back" align="center"><style name="st_text"/></lv_label>
          <screen_load_event screen="scr_home" trigger="clicked" anim_type="fade"/>
