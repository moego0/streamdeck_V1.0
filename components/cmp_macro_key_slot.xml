<component>
  <api>
    <prop name="label" type="string" default="1"/>
    <prop name="color" type="color" default="0xff3b30"/>
  </api>

  <view extends="lv_button"
        styles="btn_primary"
        width="76" height="46"
        style_pad_all="0">

    <lv_label text="$label" align="center" styles="text_title"/>

    <lv_obj width="100%" height="4"
            align="bottom_mid"
            style_bg_color="$color"
            style_bg_opa="255"
            style_pad_all="0"
            style_radius="0"/>
  </view>
</component>
