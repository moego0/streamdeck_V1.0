<component>
	<api>
		<prop name="profile_num" type="string" default="1" />
		<prop name="title" type="string" default="HOME" />
		<prop name="right_text" type="string" default="" />
	</api>

	<view
		extends="lv_obj"
		width="100%"
		height="28"
		style_bg_color="0x10162a"
		style_pad_left="6"
		style_pad_right="6"
		style_pad_top="4"
		style_pad_bottom="4"
	>
		<cmp_profile_badge profile_num="$profile_num" align="left_mid" />

		<lv_label text="$title" align="center" style_text_color="0xffffff" />

		<lv_label text="$right_text" align="right_mid" style_text_color="0x9aa4b2" />
	</view>
</component>
