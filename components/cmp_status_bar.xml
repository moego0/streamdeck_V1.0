<component>
  <api>
    <prop name="profile_num" type="string" default="1"/>
    <prop name="title" type="string" default="HOME"/>
    <prop name="right_text" type="string" default="USB"/>
  </api>

  <view extends="lv_obj"
        width="100%" height="28"
        styles="top_bar">

    <cmp_profile_badge profile_num="$profile_num" align="left_mid" x="0"/>

    <lv_label text="$title" align="center" styles="text_title"/>

    <lv_label text="$right_text" align="right_mid" styles="text_muted"/>
  </view>
</component>
